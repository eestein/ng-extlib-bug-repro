{
    "compilerOptions": {
        "outDir": "../dist",
        "baseUrl": "./",
        "module": "es2015",
        "types": [],
        "paths": {
            "@angular/*": [
                "../node_modules/@angular/*"
            ]
        },
        "target": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "declaration": true,
        "rootDir": ".",
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "test.ts",
        "**/*.spec.ts",
        "../../samples/**/*.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "ng-repro-sdk.js",
        "flatModuleId": "ng-repro-sdk"
    }
}