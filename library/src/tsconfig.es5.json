{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es5",
        "baseUrl": ".",
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "../build",
        "rootDir": ".",
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "test.ts",
        "**/*.spec.ts",
        "../samples/**/*.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "ng-repro-sdk.js",
        "flatModuleId": "ng-repro-sdk"
    }
}